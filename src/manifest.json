{
  "manifest_version": 3,
  "name": "Focus Yourself",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": []
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["softblock.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["softblock.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
